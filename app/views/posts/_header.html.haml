.header
  .header__logo
    =link_to "self-drill",root_path
    = form_with(url: search_posts_path, local: true, method: :get, class: "header__search") do |form| 
      = form.text_field :keyword, placeholder: "投稿を検索する", class: "header__search__post" 
      = form.submit "検索", class: "header__search__btn" 
  .header__right 
    .header__right__any
      - if user_signed_in?
        .user_nav.grid-6
          = link_to "ログアウト", destroy_user_session_path, method: :delete
          = link_to  "投稿する", new_post_path, class: "post"
      - else
        .grid-6
          = link_to "ログイン", new_user_session_path, class: 'post'
          = link_to "新規登録", new_user_registration_path, class: 'post'
  
    -if current_user.try(:admin?)
      .admin__form
        =link_to "/admin" do
          管理

 
      